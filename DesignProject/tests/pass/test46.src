// Test: All statement types
func testAllStatements() => void {
    local x : integer;
    local y : integer;
    local arr : integer[10];
    
    // assignStat
    x := 10;
    
    // if-else
    if (x == 10) then {
        y := 20;
    } else {
        y := 30;
    };
    
    // while
    while (x < 100) {
        x := x + 1;
    };
    
    // read
    read (x);
    
    // write
    write (x);
    
    // return (void function - no value)
    return ();
    
    // functionCall as statement
    testAllStatements();
}

